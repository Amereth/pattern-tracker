{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": false,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["api", "config", "drizzle.config.ts"]
}
